<UserControl x:Class="CIS560_FinalProject.ActionSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CIS560_FinalProject"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Name="CheckIn" Click="CheckIn_Click">Check In Items</Button>
        <Button Name="CheckOut" Grid.Column="1" Click="CheckOut_Click">Check Out Items</Button>
        <Button Name="HoldItems" Grid.Column="2" Click="HoldItems_Click">Hold Items</Button>
    </Grid>
</UserControl>
