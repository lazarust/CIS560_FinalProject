<UserControl x:Class="CIS560_FinalProject.PopulateUsers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CIS560_FinalProject"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Name: "/>
            <TextBox Name="AccountName" Width="100" TextChanged="AccountName_TextChanged"/>
        </StackPanel>
        <DataGrid Name="dv" IsReadOnly="True" SelectionChanged="dv_SelectionChanged"/>
    </StackPanel>

</UserControl>
