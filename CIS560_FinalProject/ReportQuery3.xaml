<UserControl x:Class="CIS560_FinalProject.ReportQuery3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CIS560_FinalProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name: "/>
                <TextBox Name="ItemName" Width="100" TextChanged="ItemName_TextChanged"/>
            </StackPanel>
            <DataGrid Name="dv" IsReadOnly="True" SelectionChanged="dv_SelectionChanged"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Checked out by this Account most: "/>
                <TextBlock Name="AccountMost" Width="10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Checked out Total this month: "/>
                <TextBlock Name="AmountMonth"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Checked out Total this year: "/>
                <TextBlock Name="AmountYear"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
