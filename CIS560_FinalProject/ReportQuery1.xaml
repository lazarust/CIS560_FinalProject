<UserControl x:Class="CIS560_FinalProject.ReportQuery1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CIS560_FinalProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name: "/>
                <TextBox Name="AccountName" Width="100" TextChanged="AccountName_TextChanged"/>
            </StackPanel>
            <DataGrid Name="dv" IsReadOnly="True" SelectionChanged="dv_SelectionChanged"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Item Checked out Most: "/>
                <TextBlock Name="AmountHeld"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Amount Currently Checked out: "/>
                <TextBlock Name="AmountCheckedout"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Amount Checked out in previous year: "/>
                <TextBlock Name="AmountYearCheckedOut"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
